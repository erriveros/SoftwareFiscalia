<body>
<%= form_with(model: crime, local: true) do |form| %>
  <div class="container-fluid">
    <div class="row justify-content-center custom-margin">
      <div class="col-sm-6 col-md-4 ">
        <!-- Add bg-primary in form tag if want form background color-->
        <!--text-white if want text color white-->
        <div class="field">
          <%= form.label :title, "Título", class:"pl-2 font-weight-bold" %><br />
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="field">
          <%= form.label :labels, "Marca", class:"pl-2 font-weight-bold" %><br />
          <%= form.collection_select :labels, CrimeTag.all,:id, :tag %>
        </div>
        <div class="field">
          <%= form.label :place, "Lugar", class:"pl-2 font-weight-bold" %><br />
          <%= form.text_field :place, class: "form-control" %>
        </div>
        <div class="field">
          <%= form.label :description, "Relato", class:"pl-2 font-weight-bold" %><br />
          <%= form.text_area :description , class: "form-control" %>
        </div>
        <div class="field">
          <%= form.label :images, 'Imágenes', class:"pl-2 font-weight-bold" %><br />
          <%= form.file_field :images, multiple: true %>
        </div>
        <div class="field">
          <%= form.label :files, 'Archivos', class:"pl-2 font-weight-bold" %><br />
          <%= form.file_field :files, multiple: true %>
        </div>
        <div class="field">
          <%= form.label :clip, 'Videos', class:"pl-2 font-weight-bold" %><br />
          <%= form.file_field :clip %>
        </div>
        <% if crime.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(crime.errors.count, "error") %> prohibited this crime from being saved:</h2>

            <ul>
              <% crime.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="actions">
          <%= form.submit "Crear Crimen", class: "btn btn-outline-success mt-3 btn-block shadow-sm font-weight-bold"%>
        </div>
        <div class="form-group">
        </div>
      </div>
    </div>
  </div>
<% end %>
</body>