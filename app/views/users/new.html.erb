
<%= form_for User.new, url: create_user_path do |form| %>
    <div class="container-fluid">
      <div class="row justify-content-center custom-margin">
        <div class="col-sm-6 col-md-4 ">
          <div class="field">
            <%= form.label :email , "Correo electronico", class:"pl-2 font-weight-bold" %><br />
  <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
          </div>
          <div class="field">
            <%= form.label :name , "Nombre", class:"pl-2 font-weight-bold"%><br />
  <%= form.text_field :name, class: "form-control" %>
          </div>
          <div class="field">
            <%= form.label :rut, "Rut", class:"pl-2 font-weight-bold" %><br />
  <%= form.text_field :rut, class: "form-control" %>
          </div>
          <br>
          <div class="field">
  <%= form.label :job, "Ocupación", class:"pl-2 font-weight-bold" %>
  <%= form.select(:job, raw('<option value="Carabinero">Carabinero</option><option value="Fiscal">Fiscal</option>'))%>
          </div>
          <br>
          <div class="field">
            <%= form.label :password , "Contraseña", class:"pl-2 font-weight-bold"%><br />
  <% if @minimum_password_length %>
              <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
  <% end %>
  <%= form.password_field :password, autocomplete: "new-password", class: "form-control"%>
          </div>
          <div class="field">
            <%= form.label :password_confirmation, "Confirmar contraseña", class:"pl-2 font-weight-bold" %><br />
  <%= form.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control"%>
          </div>
            </div>
          <div class="actions">
  <%= form.submit "Registrar usuario", class: "btn btn-outline-success mt-3 btn-block shadow-sm font-weight-bold"%>
          </div>
        </div>
      </div>
    </div>
<% end %>
